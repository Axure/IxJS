{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "es6",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist/es6",
        "sourceRoot": ".",
        "sourceMap": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "exclude": [
        "node_modules/",
        "spec/",
        "shim/"
    ]
}